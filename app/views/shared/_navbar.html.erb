<div class="navbar navbar-expand-sm navbar-light navbar mb-5">
  <div class="col-8">
    <%= link_to root_path , class: "navbar-brand" do %>
    <%= image_tag 'terideal_logo_white_tagline.svg', alt: "Client Logo", class: "w-100"%>
    <% end %>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <% if user_signed_in? %>
   <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <%= user_photo(current_user, transformation: {height: '100', width: '100', gravity: "face", radius: "max", crop: "fill"}, class: "avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if current_user.admin? %>
            <%= link_to t('.admin_dashboard'), "#", class: "dropdown-item" %>
          <% end %>
          <%= link_to "mon profil", profil_path(current_user), class: "dropdown-item" %>
          <%= link_to "Se déconnecter", destroy_user_session_path, data: { confirm: "Confirmer la déconnection ?"}, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
  <% else %>
  <%= link_to "Conexion", new_user_session_path, class: "btn btn-dark" %>
  <% end %>
</div>
