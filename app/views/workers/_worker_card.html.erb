<div class="row">
  <% @workers.each do |worker| %>
    <div class="col-sm-10 col-md-6 col-lg5- col-xl-4">
    <%= link_to worker_path(worker), class: "text-muted text-decoration-none justify-content-between" do %>
      <div class="card my-3 rounded-lg shadow">
        <%= worker_photo(worker, transformation: {height: '400', width: '400', gravity: "face", crop: "fill"}, class: "card-img-top img-fluid") %>
        <div class="card-body card-header">
          <h5 class="card-title text-center"><%= worker.last_name.upcase %><br><%= worker.first_name %></h5>
        </div>
        <ul class="list-group list-group-flush">
          <% if worker.positions.blank? %>
           <li class="list-group-item"><%= t '.no_data' %> <%= t '.add_new_experience' %>
          <% else %>
          <li class="list-group-item">Role : <%= worker.positions.last.position_name %></li>
          <li class="list-group-item">Société : <%= worker.positions.last.company.name %></li>
          <li class="list-group-item">Nombre d'expérinces : <%= worker.positions.blank? ? t('.no_data') : worker.positions.last.company.name %></li>
          <% end %>
        </ul>
        <div class="card-body text-center">

          <%= link_to 'Voir son CV', worker_path(worker), class: "btn btn-outline-success" %>
        </div>
      </div>
    <% end %>
  </div>
  <% end %>
</div>

