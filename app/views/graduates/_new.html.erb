<%= simple_form_for [ @worker, @graduate ] do |f| %>
  <%= f.input :name %>
  <%= f.input :speciality %>
  <%= f.input :school_name %>
  <%= f.input :school_department, collection: @french_department %>
  <%= f.input :graduation_date, as: :date, start_year: Date.today.year - 110, end_year: Date.today.year %>
  <%= link_to t('.cancel'), worker_path(@worker), class: "btn btn-outline-warning shadow", data: {action: "click->toggle-display#toggleGraduateShow", target: "toggle-display.cancelGraduateButton"}, remote: true %>
<% end %>

