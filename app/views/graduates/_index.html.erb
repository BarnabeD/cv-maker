<% if @worker.graduates.size != 0 %>
  <h4 class="card-title"><%= t 'graduate', count: @worker.graduates.size %> </h4>
  <div class="row">
    <% @worker.graduates.each do |graduate| %>
      <ul class="col-10 sol-sm-6 col-lg-6 mx-auto align-bottom mb-3">
        <li><b>Non du diplôme : </b> <%= graduate.name %> </li>
        <li><b>Spécialité : </b> <%= graduate.speciality %></li>
        <li><b>Ecole : </b><%= graduate.school_name %> - (<%= graduate.school_department %>)</li>
        <li><b>Date : </b><%= graduate.graduation_date.year %></li>
      </ul>
    <% end %>
  </div>
<% else %>
  <h1 class="bg-warning"><%= t 'no_data' %> <%= t 'add_new_graduate' %></h1>
<% end %>



